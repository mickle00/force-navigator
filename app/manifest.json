{
    "name": "Salesforce Navigator",
    "version": "0.5.18",
    "manifest_version": 2,
    "default_locale": "en",
    "browser_action": {
        "default_icon": "images/38-white.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": true
    },
    "icons": {
        "128": "images/128.png"
    },
    "web_accessible_resources": [
        "images/ajax-loader.gif"
    ],
    "description": "",
    "content_scripts": [
        {
            "css": [
                "styles/main.css"
            ],
            "matches": [
                "https://*.force.com/*",
                "https://*.salesforce.com/*"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/mousetrap.min.js",
                "scripts/forceTooling.js",
                "scripts/main.js",
                "scripts/popup.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*",
        "storage"
    ]
}